<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kitchen">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/calenderview"
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/calendar" />

        <TextView
            android:id="@+id/datetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/pfstardust"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="258dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="vertical"></ImageView>

        <ImageView
            android:id="@+id/helpb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:clickable="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="45dp"
            app:srcCompat="@drawable/kitchen_tutorial" />

        <ImageView
            android:id="@+id/setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="600dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/setting" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="82dp">

            <Button
                android:id="@+id/iceCup"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="30dp"
                android:background="#00FFFFFF" />

            <Button
                android:id="@+id/hotCup"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/iceCup"
                android:background="#00FFFFFF" />


            <Button
                android:id="@+id/hotWater"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/hotCup"
                android:background="#00FFFFFF" />
            <Button
                android:id="@+id/iceWater"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/hotWater"
            android:background="#00FFFFFF" />
            <Button
                android:id="@+id/hotMilk"
                android:layout_width="35dp"
                android:layout_height="38dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/iceWater"
              android:background="#00FFFFFF"/>

            <Button
                android:id="@+id/iceMilk"
                android:layout_width="35dp"
                android:layout_height="38dp"
                android:layout_toRightOf="@+id/hotMilk"
                android:background="#00FFFFFF" />


        </RelativeLayout>

        <TableLayout
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon0"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tag="icon0" />

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:tag="icon1" />

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:tag="icon2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tag="icon3" />

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"

                    android:tag="icon4" />

                <ImageView
                    android:id="@+id/icon5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"

                    android:tag="icon5" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/icon6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tag="icon6" />

                <ImageView
                    android:id="@+id/icon7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"

                    android:tag="icon7" />

                <ImageView
                    android:id="@+id/icon8"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"

                    android:tag="icon8" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/blender"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="142dp"
            android:background="#00FFFFFF" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/correct1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/circle"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/bil1"
                        android:layout_width="45dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/pfstardust"
                        android:lineSpacingExtra="1dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/correct3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="70dp"
                        android:src="@drawable/circle"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/bil3"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="70dp"
                        android:fontFamily="@font/pfstardust"
                        android:lineSpacingExtra="1dp"
                        android:layout_marginLeft="2dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"

                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bil2"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/pfstardust"
                        android:lineSpacingExtra="1dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:layout_marginLeft="3dp"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/correct2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/circle"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/correct4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="70dp"
                        android:src="@drawable/circle"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/bil4"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="70dp"
                        android:fontFamily="@font/pfstardust"
                        android:text="TextView"
                        android:lineSpacingExtra="1dp"
                        android:textAlignment="center"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </FrameLayout>
            </LinearLayout>

            <Button
                android:id="@+id/trash"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="142dp"
            android:background="#00FFFFFF" />

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/recipeBook"
            android:layout_width="99dp"
            android:layout_height="69dp"
            android:background="#00FFFFFF" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/selectCup"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="37dp" />

            <ImageView
                android:id="@+id/selectWM"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"  />

            <ImageView
                android:id="@+id/selectIng"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:tag="check1" />

            <ImageView
                android:id="@+id/selectIng2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:tag="check2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/selectIng4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:tag="check4"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/selectIng3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:tag="check3"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/selectBlen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"  />
        </LinearLayout>

        <Button
            android:id="@+id/btnMake"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/complete" />

    </LinearLayout>

</LinearLayout>




